{
  "manifest_version": 3,
  "name": "Kueez CMS Scraper",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "cookies"],
  "host_permissions": [
    "https://cms.kueez.net/*",
    "https://www.amazon.com/*",
    "https://www.amazon.de/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "public/vite.svg",
    "default_title": "Kueez CMS Scraper"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://cms.kueez.net/*"],
      "js": ["src/content.js"]
    }
  ]
}
